@import url('https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap')

html,body
	margin 0
	height 100%
	background #000
	font-family system-ui
	position relative


#app
	position relative
	width 100vw
	height 100vh
	display grid
	align-items center
	padding-left 32px
	padding-right 32px

// Main layout with side panels
.main-layout
	display flex
	align-items flex-start
	justify-content center
	gap 24px
	width 100%
	max-width 1800px
	margin 0 auto

// Side panels (cheat codes and personality)
.side-panel
	width 280px
	min-width 280px
	background linear-gradient(145deg, rgba(30, 35, 50, 0.95), rgba(15, 20, 35, 0.98))
	backdrop-filter blur(10px)
	border-radius 12px
	border 1px solid rgba(180, 180, 220, 0.15)
	padding 20px
	color rgba(225, 225, 255, 0.9)
	box-shadow 0 8px 32px rgba(0, 0, 0, 0.4)
	max-height 500px
	overflow-y auto

	h3
		margin 0 0 16px 0
		font-size 16px
		font-weight 600
		text-transform uppercase
		letter-spacing 1px
		color #fff
		text-shadow 0 0 10px rgba(100, 150, 255, 0.5)
		border-bottom 1px solid rgba(255, 255, 255, 0.1)
		padding-bottom 12px

// Cheat codes panel styles
#cheat-codes-panel
	.cheat-list
		display flex
		flex-direction column
		gap 16px

	.cheat-item
		background rgba(255, 255, 255, 0.05)
		border-radius 8px
		padding 12px
		transition all 0.3s ease

		&:hover
			background rgba(255, 255, 255, 0.1)

		&.completed
			background rgba(100, 255, 100, 0.2)
			box-shadow 0 0 20px rgba(100, 255, 100, 0.3)

	.cheat-name
		font-size 14px
		font-weight 500
		margin-bottom 8px
		color #fff

	.cheat-sequence
		display flex
		gap 8px

	.cheat-key
		width 28px
		height 28px
		display flex
		align-items center
		justify-content center
		border-radius 4px
		font-size 14px
		font-weight 600
		font-family 'Courier New', monospace
		background rgba(255, 255, 255, 0.1)
		border 1px solid rgba(255, 255, 255, 0.3)
		color #fff

	.legend
		margin-top 20px
		padding-top 15px
		border-top 1px solid rgba(255, 255, 255, 0.2)
		
		h4
			margin 0 0 10px 0
			font-size 12px
			color rgba(255, 255, 255, 0.6)
			text-transform uppercase
			letter-spacing 1px
		
		.legend-item
			display flex
			align-items center
			gap 8px
			padding 6px 0
			font-size 13px
			
			.legend-key
				width 24px
				height 24px
				display flex
				align-items center
				justify-content center
				font-family 'Courier New', monospace
				font-weight bold
				background rgba(255, 255, 255, 0.1)
				border-radius 4px
				color #fff
			
			.legend-icon
				color rgba(255, 255, 255, 0.5)
				font-size 16px
				width 20px
				text-align center
			
			.legend-name
				color rgba(255, 255, 255, 0.8)

// Personality panel styles
#personality-panel
	#personality-content
		min-height 200px

	.personality-placeholder
		text-align center
		color rgba(255, 255, 255, 0.5)
		font-style italic
		padding 40px 20px

		p
			margin 0

	.personality-card
		animation fadeIn 0.3s ease

		h4
			margin 0 0 16px 0
			font-size 15px
			color var(--accent-color, #fff)
			text-shadow 0 0 10px var(--accent-color)

		.personality-description
			font-size 13px
			line-height 1.6

			p
				margin 0 0 12px 0

				&:last-child
					margin-bottom 0

			strong
				color #fff

@keyframes fadeIn
	from
		opacity 0
		transform translateY(10px)
	to
		opacity 1
		transform translateY(0)

.layout
	display flex
	align-items center
	justify-content space-between
	gap 48px
	width 100%

#wrap
	height 300px
	display grid
	place-items center

svg
	height 300px
	width auto
	max-width 100%
	filter drop-shadow(0 0 8px rgba(0,0,0,.7))


.controller_stage
	position relative
	display inline-block

.controller_stage
	position relative
	display inline-block
	line-height 0

.camera_overlay
	position absolute
	inset 0
	pointer-events none

// let the camera itself receive clicks
.camera_overlay > .camera
	pointer-events auto

#triangle_camera
	position absolute
	left 79.24%     // tweaked for button placement - don't change
	top 24.35%     // tweak for button placement - don't change
	transform translate(-50%, -50%) translate(18px, 80px) scale(0.85)  // tweak scale
	transform-origin center



	// force the box to have real size
	> .camera
		display block
		width 55px
		height 35px
		background #fff
		border-radius 5px
		cursor pointer
		position relative

	.cam-circle
		position absolute
		top 4px
		left 14px
		width 25px
		height 25px
		background #fff
		border-radius 50px
		border 2px solid #a9a9a9

	.cam-circle-2
		position absolute
		top 10px
		left 21px
		width 15px
		height 15px
		background #000
		border-radius 50px

	.cam-circle-3
		position absolute
		top 9px
		left 19.5px
		width 18px
		height 18px
		background radial-gradient(#fff,#000,#9b9b9b)
		border-radius 50px

	.cam-flash
		position absolute
		top 0
		left 40px
		width 15px
		height 10px
		background #000
		border-radius 2px

	.cam-button
		position absolute
		top -3px
		left 4px
		width 12px
		height 5px
		background #000
		border-radius 2px
		border 1px solid gray

	.light
		position absolute
		top 15%
		left 85%
		transform translate(-50%, -50%)
		width 0
		height 0
		opacity 0
		background radial-gradient(ellipse at center, rgba(255,255,255,1) 0%, rgba(255,255,255,0) 100%)
		border-radius 100%
		z-index 2

	.camera.is_flashing .light
		opacity 1
		animation flash 0.3s ease-out

	@keyframes flash
		0%
			width 0
			height 0
			opacity 0
		20%
			width 100px
			height 100px
			opacity 1
		40%
			width 0
			height 0
			opacity 0
		100%
			width 0
			height 0
			opacity 0

#football_o_button
	position absolute
	left 88.02%
	top 54%
	transform translate(-50%, -50%)
	transform-origin center

	> .football-icon
		display block
		width 48px
		height 48px
		cursor pointer
		position relative
		transition transform 0.1s ease
		pointer-events auto

	.football-icon:hover
		transform scale(1.1)

	.football-icon:active
		transform scale(0.95)

	.football-icon img
		width 100%
		height 100%
		filter drop-shadow(0 2px 4px rgba(0,0,0,0.3))
		pointer-events none

#boxing_x_button
	position absolute
	left 83%
	top 61%
	transform translate(-50%, -50%)
	transform-origin center

	> .boxing-icon
		display block
		width 53px
		height 53px
		cursor pointer
		position relative
		transition transform 0.1s ease
		pointer-events auto

	.boxing-icon:hover
		transform scale(1.1)

	.boxing-icon:active
		transform scale(0.92)

	.boxing-icon img
		width 100%
		height 100%
		filter drop-shadow(0 2px 4px rgba(0,0,0,0.3))
		pointer-events none

#theme_square_button
	position absolute
	left 76%
	top 52%
	transform translate(-50%, -50%)
	transform-origin center

	> .theme-icon
		display block
		width 60px
		height 60px
		cursor pointer
		position relative
		transition transform 0.1s ease
		pointer-events auto

	.theme-icon:hover
		transform scale(1.1)

	.theme-icon:active
		transform scale(0.95)

	.theme-icon img
		width 100%
		height 100%
		filter drop-shadow(0 2px 4px rgba(0,0,0,0.3))
		pointer-events none

	.press-gif
		position absolute
		inset 0
		width 120%
		height 120%
		object-fit contain
		opacity 0
		transform scale(1.15)
		pointer-events none
		z-index 2

	.theme-icon:active .press-gif
		opacity 1
	
	.theme-icon > img:first-child
		position relative
		z-index 1




