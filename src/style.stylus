// general code for the TV display

#tv
	display grid
	place-items center

#tv_container
	max-width 1400px
	width 95vw

#tv_monitor
	background #000
	position relative
	border-top 3px solid #888
	padding 2% 2% 4% 2%
	border-radius 10px
	border-bottom-left-radius 50% 2%
	border-bottom-right-radius 50% 2%

#tv_monitor:after
	content ""
	display block
	position absolute
	bottom 3%
	left 36%
	height 0.5%
	width 28%
	background #ddd
	border-radius 50%
	box-shadow 0 0 3px 0 white

#tv_screen
	position relative
	background-color #777
	background-size cover
	background-position top center
	height 0
	padding-bottom 56.25%
	overflow hidden
	border-radius 6px

// DNA simulation required only this block
.dna_canvas
	position absolute
	inset 0
	width 100%
	height 100%
	display block
	z-index 2

	background repeating-linear-gradient(90deg, #808080, #808080 1px, transparent 1px, transparent 40px), repeating-linear-gradient(0deg,  #808080, #808080 1px, transparent 1px, transparent 40px), rgb(39, 86, 162)


// Soccer game CSS generated from everything below:

.soccer
	background url(http://upload.wikimedia.org/wikipedia/en/e/ec/Soccer_ball.svg)
	background-size 60px 60px
	height 60px
	width 60px
	position absolute
	top 50%
	left 0
	transform translateY(-50%)
	z-index 10

.goalpost
	position absolute
	right 1%
	width 50px
	height 140px
	background linear-gradient(to right, transparent 0%, transparent 30%, #ff0000 30%, #ff0000 35%, transparent 35%, transparent 65%, #ff0000 65%, #ff0000 70%, transparent 70%)
	border 3px solid #cc0000
	border-radius 5px
	top 0%
	z-index 5

	&:before, &:after
		content ''
		position absolute
		left 0
		right 0
		height 5px
		background #ff0000

	&:before
		top 0

	&:after
		bottom 0

.goal-message, .miss-message
	position absolute
	top 50%
	left 50%
	transform translate(-50%, -50%)
	font-size 72px
	font-weight bold
	font-family 'Press Start 2P', system-ui
	text-shadow 3px 3px 0 #000, -3px -3px 0 #000, 3px -3px 0 #000, -3px 3px 0 #000
	z-index 20

.goal-message
	color #ffff00

.miss-message
	color #ff0000

.confetti
	position absolute
	top -10px
	width 10px
	height 10px
	z-index 15
	animation confettiFall 2s linear forwards

#tv_monitor.shake
	animation shake 0.5s ease-in-out

@keyframes shake
	0%, 100%
		transform translateX(0)
	10%, 30%, 50%, 70%, 90%
		transform translateX(-10px)
	20%, 40%, 60%, 80%
		transform translateX(10px)

@keyframes confettiFall
	0%
		top -10px
		opacity 1
		transform rotate(0deg)
	100%
		top 100%
		opacity 0
		transform rotate(720deg)

.world-cup
	color #82AE6F
	text-align center

@media all and (min-width: 960px)
	#tv_monitor
		animation tvflicker 0.5s infinite alternate

@keyframes tvflicker
	0%
		box-shadow 0 0 100px 0 rgba(225,235,255,.4)
	100%
		box-shadow 0 0 60px 0 rgba(200,220,255,.6)

.interactive
	cursor pointer

.pressed
	filter brightness(65%)

.cheat
	background linear-gradient(135deg,
		#ff004c 0%,
		#ff7a00 20%,
		#ffe600 40%,
		#00ffd5 60%,
		#4c6bff 80%,
		#b000ff 100%
	)
	background-size 600% 600%
	animation cheatshift 6s ease-in-out infinite

.cheat:after
	content 'You found the Code!'
	position fixed
	inset 0
	display grid
	place-items start
	align-items center
	margin-left 32px
	font-size 32px
	font-family 'Press Start 2P', system-ui
	color #fff
	text-shadow 0 0 24px rgba(0,0,0,.6)
	pointer-events none

@keyframes cheatshift
	0%
		background-position 0% 50%
	50%
		background-position 100% 50%
	100%
		background-position 0% 50%

// BB8 simulation CSS generated from everything below: // 

#tv_screen .bb8_root
	position absolute
	inset 0
	overflow hidden
	background #869F9D

#tv_screen .bb8_root *
	box-sizing border-box

#tv_screen .bb8_root .message
	position absolute
	top 10px
	left 0
	width 100%
	z-index 5
	pointer-events none

#tv_screen .bb8_root h2
	color #ccc
	font-family "Raleway", sans-serif
	text-align center
	opacity 1
	transition opacity .8s

#tv_screen .bb8_root h2.hide
	opacity 0

#tv_screen .bb8_root .sand
	background #B69C77
	height 30%
	position absolute
	width 100%
	z-index 0
	right 0
	bottom 0
	left 0

// --- BB8 sizes (converted from $d: 140px)
