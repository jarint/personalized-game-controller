	position absolute
	width 140px
	bottom 20%
	left 0
	margin-left -70px
	z-index 2

#tv_screen .bb8_root .antennas
	position absolute
	transition left .6s
	left 22%

#tv_screen .bb8_root .antennas.right
	left 0%

#tv_screen .bb8_root .antenna
	background #e0d2be
	position absolute
	width 2px

#tv_screen .bb8_root .antenna.short
	height 20px
	top -60px
	left 50px

#tv_screen .bb8_root .antenna.long
	border-top 6px solid #020204
	border-bottom 6px solid #020204
	height 36px
	top -78px
	left 56px

#tv_screen .bb8_root .head
	background #e0d2be
	border-radius 90px 90px 14px 14px
	height 56px
	margin-left -45px
	overflow hidden
	position absolute
	width 90px
	z-index 1
	top -46px
	left 50%

#tv_screen .bb8_root .head .stripe
	position absolute
	width 100%

#tv_screen .bb8_root .head .stripe.one
